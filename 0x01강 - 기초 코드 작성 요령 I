// 0x01강 - 기초 코드 작성 요령 I
#include <vector>
#include <algorithm>
using namespace std;
#include <iostream>
#include <iterator>

int func1(int n) {
    int  sum = 0;
    for (int i = 0; i < n; i += 3) {
        sum += i;
    }
    for (int i = 0; i < n; i += 5) {
        sum += i;
    }
    for (int i = 0; i < n; i += 15) {
        sum -= i;
    }
    return sum;
}
int func2(int arr[], int n) {
    for (int i = 0; i < n; i++) {
        for (int j = i+1; j < n; j++) {
            if (arr[i] + arr[j] == 100)
                return 1;
        }
    }
    return 0;
}
int func3(int n) {
    int yes = -1;
    int i =1;
    while (yes == -1) {
        if (i * i == n) { yes = 1; }
        if (n < i * i) { yes = 0; }
        i++;
    }
    return yes;
}
int func4(int n) {
    int m = 2;
    while (m <= n) {
        m *= 2;
    }
    return m/2;
}
int main()
{
    cout << func1(16) << endl;
    cout << func1(34567) << endl;
    cout << func1(27639) << endl;

    int arr1[] = { 1, 52 ,48};
    cout << func2(arr1, 3) << endl;
    int arr2[] = { 50, 42 };
    cout << func2(arr2, 2) << endl;
    int arr3[] = { 4, 13, 63, 87 };
    cout << func2(arr3, 4) << endl;

    cout << func3(9) << endl;
    cout << func3(693953651) << endl;
    cout << func3(756580036) << endl;

    cout << func4(5) << endl;
    cout << func4(97615282) << endl;
    cout << func4(1024) << endl;
    return 0;
}


